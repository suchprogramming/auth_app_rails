<h1>Sign Up</h1>

<%=form_for User.new, :class => 'form' do |f| %>
  <div class="form-group">
    <%=f.label :email %>
    <%=f.text_field :email, :placeholder => 'Enter E-Mail', :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%=f.label :password %>
    <%=f.password_field :password, :placeholder => 'Enter Password', :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%=f.label :password_confirmation %>
    <%=f.password_field :password_confirmation, :placeholder => 'Re-type Password', :class => 'form-control' %>
  </div>
  <%=f.submit "Sign Up", :class => 'btn btn-success' %>
<%end%>
<hr>
<p><%= link_to 'Back', '/', :class => 'btn btn-primary' %></p>
